generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Response {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  data             Json
  completed        Boolean  @default(false)
  startYear        Int?
  affiliationYears Int?
  structureName    String?
  surveyVersion    Int      @default(2)

  @@index([createdAt])
  @@index([completed])
  @@index([startYear])
  @@index([surveyVersion])
}

model Admin {
  id       String @id @default(cuid())
  username String @unique
  password String
}
